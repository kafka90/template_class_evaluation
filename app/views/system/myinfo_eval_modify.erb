    </div>
</div>
    <%= render :partial =>"main/aside2"%> 
     <section class="form-style-10" style="margin-top:20px; padding-left:0px; padding-right:0px;">
        <form action="/system/myinfo_eval_modify_process/<%=@this_id%>" method="POST" enctype="multipart/form-data" name="write_form">
